#include <cstdlib>
#include <iostream>

using namespace std;

int main(int argc, char** argv) {
    float num1, num2, num3, soma, media ;
    cout << "Digite o primeiro número: " ;
    cin >> num1 ;
    cout << "Digite o segundo número: " ;
    cin >> num2 ;
    cout << "Digite o terceiro número: " ;
    cin >> num3 ;
    soma = num1 + num2 + num3 ;
    media = soma/3 ;
    cout << "O valor da soma é: "<< soma << "\n";
    cout << "O valor da média é: " << media << "\n";
    
    return 0;
}
